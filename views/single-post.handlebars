<article class="post">
    <div class ="title">{{post.title}}</div>
    <div class="meta">
        Posted by {{post.user.username}} on _____
        |
        <a href ="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>

<div class ="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} created at _____
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>