<ol class ="post-list">
    {{#each posts as |post|}}
    <li>
        <article class ="post">
            <div class ="title">{{title}}</div>
            <div class="meta">
                Posted by {{user.username}}
                |
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>